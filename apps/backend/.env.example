# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/riviso_db

# Redis Configuration
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your-secret-key-change-in-production

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:4000/v1/integrations/gsc/callback

# AI Configuration
# OpenAI API Key - Get from https://platform.openai.com/api-keys
# Leave empty or set to 'mock-key' for development without AI
OPENAI_API_KEY=

# LLM Provider (openai or anthropic)
LLM_PROVIDER=openai

# OpenAI Model (gpt-4-turbo-preview, gpt-4, gpt-3.5-turbo)
OPENAI_MODEL=gpt-4-turbo-preview

# AI Mock Mode (set to 'true' for development without API key)
# When true, AI features will return mock data instead of calling OpenAI
AI_MOCK_MODE=false

# Application Configuration
NODE_ENV=development
PORT=4000

# OpenSearch Configuration
OPENSEARCH_NODE=http://localhost:9200

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000
