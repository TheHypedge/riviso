{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd ../.. && npm install && npm run build:packages && cd apps/backend && npm run build",
    "watchPatterns": [
      "apps/backend/**",
      "packages/**"
    ]
  },
  "deploy": {
    "startCommand": "npm run start:prod",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "envs": {
    "NODE_ENV": {
      "default": "production"
    },
    "PORT": {
      "default": "4000"
    }
  }
}
