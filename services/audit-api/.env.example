# Database Configuration
DATABASE_URL=postgresql://seo_audit:password@localhost:5432/seo_audit
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Application Configuration
APP_NAME=SEO Audit API
APP_VERSION=1.0.0
DEBUG=false
LOG_LEVEL=INFO

# Security
SECRET_KEY=your-secret-key-here-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# External Services
AUDIT_API_URL=http://localhost:8000
WEB_APP_URL=http://localhost:3000

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# Audit Configuration
MAX_AUDIT_URLS=5
AUDIT_TIMEOUT=300
MAX_REDIRECTS=5
MAX_CONTENT_SIZE=10485760  # 10MB
USER_AGENT=SEO-Audit-Bot/1.0

# Queue Configuration
QUEUE_POLL_INTERVAL=5
QUEUE_MAX_RETRIES=3
QUEUE_RETRY_DELAY=60

# Observability
SENTRY_DSN=
OTEL_SERVICE_NAME=seo-audit-api
OTEL_EXPORTER_OTLP_ENDPOINT=

# Development
RELOAD=false
WORKERS=1
